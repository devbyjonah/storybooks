<h6>Dashboard</h6>
<h3>Welcome <%= name %></h3>
<p>Here are your stories</p>
<%if (stories.length > 0) {%>
	<table class="striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%for (let i = 0; i < stories.length; i++) {%>
				<tr>
					<td><a href="/stories/<%= stories[i]._id %>"><%= stories[i].title %></a></td>
					<td><%= formatDate(stories[i].createdAt, 'MMMM Do YYYY, h:mm:ss a') %></td>
					<td><span class="dash-status"><%= stories[i].status %></span></td>
					<td class="options">
						<a href="/stories/edit/<%= stories[i]._id %>" class="btn btn-float"><i class="fas fa-edit"></i></a>
						<form action="/stories/<%= stories[i]._id %>" method="POST" id="delete-form">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
						</form>
					</td>
				</tr>
			<%}%>
		</tbody>
	</table>
<%} else {%>
	<p>you have not created any stories</p>
<%}%>